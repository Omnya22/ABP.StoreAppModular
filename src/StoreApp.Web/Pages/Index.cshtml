@page
@using Microsoft.AspNetCore.Mvc.Localization
@using StoreApp.Localization
@using Volo.Abp.Users
@model StoreApp.Web.Pages.IndexModel
@inject IHtmlLocalizer<StoreAppResource> L
@inject ICurrentUser CurrentUser
@section styles {
    <abp-style src="/Pages/Index.css" />
}
@section scripts {
    <abp-script src="/Pages/Index.js" />
}
<div class="container">

	@if (!CurrentUser.IsAuthenticated)
	{
		<abp-card >
			<abp-card-header>@L["Login"]</abp-card-header>
			<abp-card-body>
				<a abp-button="Primary" href="~/Account/Login"><i class="fa fa-sign-in"></i> @L["Login"]</a>
			</abp-card-body>
		</abp-card>
	}
	@if (CurrentUser.IsAuthenticated)
	{
		<abp-card style="">
			<abp-card-header>@L["Welcome"]</abp-card-header>
			<abp-card-body>
				<abp-card-title>@L["Welcome"]: @CurrentUser.Name</abp-card-title>
				<hr />
				<a abp-button="Outline_Primary" style="float: right" href="https://abp.io/">abp.io</a>
			</abp-card-body>
		</abp-card>
	}
</div>
